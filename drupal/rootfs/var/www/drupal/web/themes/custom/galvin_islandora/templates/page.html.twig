                    </g>
                </svg>
                <span class="show-for-sr"></span>
            </button>
        </div>
    </div>
</header>

<main id="main-wrapper">
{{ page.highlighted }}
    {{ page.title }}
    {{ page.hero }}
    <div class="main-content">
          <div class="grid-container">
           <div class="grid-x grid-margin-x">
            <!--  <div class="cell auto"> -->
             <div id="content-above">  {{ page.content_above }} </div>
               {{ page.sidebar_first}}
        {{ page.subsection_nav }}
	
        {{ page.content }}
        {{ page.body }}
    </div>
</div>
</div>
</main>



{{ page.footer_subsection }}

{{ page.footer_upper }}

<footer class="site-footer section--background">
    {{ page.footer_lower }}
</footer>
</div>
