{#
  /**
   * Template to display Drupal pages.
* This custom template is adapted from the Oho IIT theme and adds Foundation classes and Galvin-specific elements and assets.
   */
#}




{%
  set page_classes = [
    'page',
  ]
%}

{%
  set wrapper_classes = [
    'page-wrapper',
  ]
%}

{%
  set content_classes = [
    'main-content',
  ]
%}



{{ alert_message }}


<div {{attributes.addClass(page_classes) }}>

    {% if page.highlighted|render|striptags|trim|length > 0 %}
    <div class="system-region">
        <div class="system-messages">



           

        </div>
    </div>
</div>
{% endif %}

<!-- <header id="header" class="site-header"> -->
    <header id="header" class="site-header" data-sticky-container> 
    <!-- <div class="site-header__sticky-container"> -->
        <div class="site-header__sticky-container sticky" data-sticky data-margin-top="0" data-anchor="main-wrapper"> 
        <div class="grid-container">
            <div class="header-btns header-btns--sticky">
                <div class="grid-container">
                    {{ page.header_cta_nav }}
                </div>
            </div>
            <div class="grid-x grid-margin-x">
                <div class="cell auto">
                    {{ page.header }}
                    <a class="site-header__logo site-header__logo--large" href="/">
                        <img src="{{ base_path ~ directory }}/images/PVGLIBRARY_horiz_lockup_2019.png" width="530" height="130" alt="logo">
                    </a>
                    <a class="site-header__logo site-header__logo--condensed" href="/">
                        <img src="{{ base_path ~ directory }}/images/PVGLIBRARY_horiz_lockup_2019.png" width="530" height="130" alt="logo">
                    </a>
                </div>
                <div class="cell initial-12 medium-4">
                    {{ drupal_view('today_s_hours', 'block_2') }}
                    {# {{ drupal_view('today_s_uasc_hours', 'block_1') }} #}
                </div>
            </div>

            <!--here-->

            <div class="site-header__main" id="site-header__main" data-toggler=".mobile-menu-open">
                <div class="site-header__main__inner">
                    {{ page.search }}

                    <div class="site-header__top">
                        <div class="site-header__top__inner">
                            {{ page.secondary_nav }}
                        </div>
                    </div>
                    <div class="site-header__bottom">
                        {{ page.primary_nav }}
                    </div>
                    <div class="header-btns header-btns--mobile">
                        {{ page.header_cta_nav }}
                    </div>
                </div>
            </div>
            <button class="mobile-menu-button" data-toggle="site-header__main" data-button-open-text="{{ 'Open the main menu'|t }}" data-button-close-text="{{ 'Close the main menu'|t }}" data-button-enable-at="0" data-button-disable-at="9000000" data-button-open-class="mobile-menu-open">
                <svg width="320px" height="269px" viewBox="0 0 320 269" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <g id="Symbols" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
