{% import "@oho_base/includes/oho-macros.html.twig" as oho_macros %}
<article class="listing-item">
  <div class="grid-x grid-margin-x">
    {% if content.field_blog_image|render %}
      <div class="cell initial-12 small-4 small-order-1">
        <a class="listing-item__image" href="{{ url }}">
          {{ content.field_blog_image }}
        </a>
      </div>
    {% endif %}
    <div class="cell initial-12 small-8">
      <div class="listing-item__content">
        <h2 class="h3 listing-item__title arrow-link global-spacing--medium"><a href="{{ url }}">{{ node.label }}</a></h2>
        <p>{{ content.body }}</p>
      </div>
    </div>
  </div>
</article>
