{% import "@oho_base/includes/oho-macros.html.twig" as oho_macros %}

<div class="card--profile card card--medium">
  <div class="profile-item__inner">
    {% if content.field_profile_image|render %}
      <div class="profile-item__media">
        {{ content.field_profile_image }}
      </div>
    {% endif %}
    <div class="profile-item__content card__content">
      <div class='card__content__inner'>
        <h3 class='arrow-link'><a href="{{ url }}">{{ node.label }}</a></a></h3>
          <div class="profile-item__positions">
            {{ oho_macros.field_wrapper(content.field_profile_position, 'span', 'position') }}
          </div>
      </div>
    </div>
  </div>
</div>