{#
  /**
   * @file
   * Template to display a school large_feature (school group header).
   * This template is used for school node 821 which is Stuart.
   *
   * Available variables:
   *  - is_school_node (boolean): Is this being rendered on a school node type.
   */
#}

{% set header_video_url = content.field_header_video_url|render|trim %}
{%
  set hero_classes = [
    'hero',
    'global-spacing--xlarge',
    'hero--colleges',
    'hero--stuart',
    'hero--img'
  ]
%}
{% set hero_classes = hero_classes|merge(is_school_node and header_video_url ? ['hero--video'] : [])%}

<section class="{{ hero_classes|join(' ') }}">
  <div class="hero__media">
    {% if is_school_node %}
      {% if header_video_url %}
        <div class="video-feature">
          <video id="hero" autoplay muted loop preload="true">
            <source src="{{ header_video_url|raw }}">
          </video>
        </div>
        {{ content.field_header_image }}
      {% else %}
        {{ content.field_header_image }}
      {% endif %}
    {% else %}
      {{ content.field_header_image }}
    {% endif %}
  </div>
  <div class="hero__overlay" aria-hidden="true"></div>
  <div class="hero__content">
    <div class="hero__content__inner">
      <nav data-sticky-container class='college-nav'>
        <div data-sticky-item class='college-nav__sticky-container'>
          <div class='grid-container college-nav__inner'>
            <div class="hero--school__content">
            {% if is_school_node %}
              <h1 class="h2 hero--school__school-name">{{ node.label }}</h1>
              {% if content.field_school_tagline|render %}
                <p class="hero--school__school-tagline">{{ content.field_school_tagline }}</p>
              {% endif %}
            {% else %}
              <span class="h2 hero--school__school-name">{{ node.label }}</span>
              {% if node.field_school_tagline_onchildren.value == '1' and content.field_school_tagline|render %}
                <p class="hero--school__school-tagline">{{ content.field_school_tagline }}</p>
              {% endif %}
            {% endif %}
            </div>
            <div class="hero--school__nav-wrapper">
              <div class="accordion accordion--college accordion--mobile" data-accordion-open-text="Click to Open" data-accordion-close-text="{{ 'Click to Close'|t }}" data-accordion-breakpoint="1025">
                <button class="accordion__button btn" disabled>
                  <span class="show-for-sr">{{ 'Click to Open'|t }}</span>
                  <span class="accordion__button-text">{{ 'More in This Section'|t }}</span>
                  <svg class="accordion__icon" version="1.1" id="Layer_2" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 10 17" style="enable-background:new 0 0 10 17;" xml:space="preserve">
                    <path class="accordion__icon-path" d="M9.7,9.2l-7.3,7.5c-0.4,0.4-0.9,0.4-1.3,0l-0.9-0.9c-0.4-0.4-0.4-1,0-1.3
                    l5.8-6l-5.8-6c-0.4-0.4-0.4-1,0-1.3l0.9-0.9c0.4-0.4,0.9-0.4,1.3,0l7.3,7.5C10.1,8.2,10.1,8.8,9.7,9.2z"></path>
                  </svg>
                </button>
                <div class='accordion__content'>
                  {{ school_menu }}
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </div>
</section>
