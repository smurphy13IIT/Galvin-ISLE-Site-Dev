{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
    'related related--news',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header %}
    <header>
      {{ header }}
    </header>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}

  <div class='global-spacing--small'>
    {% include '@iit/includes/lined-section-heading.html.twig' with {
      title: 'More Events'|t,
      link_url: structure_settings.event_listing_url,
      link_text: 'View All Events'|t,
    } %}
  </div>

  <div class="grid-x grid-margin-x">
    {{ rows }}
    {{ empty }}
    {{ pager }}
  </div>

  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}
</div>
