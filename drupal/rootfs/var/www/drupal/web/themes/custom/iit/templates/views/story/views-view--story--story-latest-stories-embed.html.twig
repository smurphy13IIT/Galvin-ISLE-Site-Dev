{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
    'related related--news',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header %}
    <header>
      {{ header }}
    </header>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}

  {% include '@iit/includes/section-heading.html.twig' with {
    title: 'Latest Stories'|t
  } %}

  <div class="grid-container">
    <div class="grid-x grid-margin-x">
      {{ rows }}
      {{ empty }}
      {{ pager }}
    </div>
  </div>

  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}
</div>
